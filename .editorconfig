# Based on https://github.com/dotnet/runtime/blob/main/.editorconfig
root = true

[*]
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# C# files
[*.cs]
indent_size = 4

# Shell scripts
[*.sh]
end_of_line = lf

[*.{cmd,bat,ps1}]
end_of_line = crlf
